# OpenAI API Key for AI insights (optional - will use mock responses if not provided)
OPENAI_API_KEY=

# Alpha Vantage API Key for equities/ETFs/FX + News & Sentiment + Earnings + Sector Performance
ALPHAVANTAGE_KEY=

# CoinGecko API Base URL for cryptocurrency data
COINGECKO_BASE=https://api.coingecko.com/api/v3

# Data mode: mock (sample data) or live (real API calls)
DATA_MODE=mock

# Cache TTL settings in seconds
CACHE_TTL_PRICE_SEC=900   # 15 minutes for price data
CACHE_TTL_NEWS_SEC=600    # 10 minutes for news data
CACHE_TTL_ECON_SEC=10800  # 3 hours for economic data

# Database URL (will default to SQLite file if not provided)
DATABASE_URL=file:./dev.db
